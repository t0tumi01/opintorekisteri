<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>Muokkaa opintojakson tietoja</title>
	<link rel="stylesheet" href="/stylesheets/myStyle.css">
</head>
<body class="container" style="margin-top: 50px;">

	<% if (messages.error) { %>
	<div class="alert-danger" role="alert"><%- messages.error %></div>
	<% } %>

    <div class="card"> 
    	<div class="card-header">
			Muokkaa opintojakson tietoja
		</div>
        <div class="card-body">
            <form action="/opintojaksot/update/<%= id %>" method="post">
                <div class="form-group">
                    <label>Koodi:</label>
                    <input type="text" class="form-control" name="Koodi" value="<%= Koodi %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>Laajuus:</label>
                    <input type="text" class="form-control" name="Laajuus" value="<%= Laajuus %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>Nimi:</label>
                    <input type="text" class="form-control" name="Nimi" value="<%= Nimi %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-info" value="Päivitä"/>
                </div>
            </form>
        </div>
    </div>

</body>
</html>