<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>Muokkaa opiskelijan tietoja</title>
	<link rel="stylesheet" href="/stylesheets/myStyle.css">
</head>
<body class="container" style="margin-top: 50px;">

	<% if (messages.error) { %>
	<div class="alert-danger" role="alert"><%- messages.error %></div>
	<% } %>

    <div class="card"> 
    	<div class="card-header">
			Muokkaa opiskelijan tietoja
		</div>
        <div class="card-body">
            <form action="/opiskelijat/update/<%= id %>" method="post">
                <div class="form-group">
                    <label>Etunimi:</label>
                    <input type="text" class="form-control" name="Etunimi" value="<%= Etunimi %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>Sukunimi:</label>
                    <input type="text" class="form-control" name="Sukunimi" value="<%= Sukunimi %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>Osoite:</label>
                    <input type="text" class="form-control" name="Osoite" value="<%= Osoite %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>Luokkatunnus:</label>
                    <input type="text" class="form-control" name="Luokkatunnus" value="<%= Luokkatunnus %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-info" value="Päivitä"/>
                </div>
            </form>
        </div>
    </div>

</body>
</html>